 }
  }

@media (max-width: 768px) {
  h1 {
	  font-size: 0.9em;
  }	  
  .keys {
	
      flex-direction: column;
}

  .key {
	 width: 60px;
 }

  .keys kbd {
	font-size: 1.5em;
  }
}